<br />

<div class="booyah-box col-10 offset-1">
  <h1>What I am Learning</h1>
  <% current_user.enrolled_courses.each do |course| %>
    <h3 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h3>
    <br />
  <div class="text-center">
    <%= image_tag course.image.url, class: 'img-fluid' %>
  </div>
    <br />
    <div class="row">
      <div class="col-12 col-sm-8">
        <%= course.descriptions %>
      </div>
      <div class="col-12 col-sm-4 text-center">
        <%= link_to "More info...", course_path(course), class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
    <hr class="col-8 offset-2">
    <br class="clr" />
  <% end %>

  <h1>What I am Teaching</h1>
  <% current_user.courses.each do |course| %>
    <h3 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h3>
    <br />
  <div class="text-center">
    <%= image_tag course.image.url, class: 'img-fluid' %>
  </div>
    <br />
    <div class="row">
      <div class="col-12 col-sm-8">
        <%= course.descriptions %>
      </div>
      <div class="col-12 col-sm-4 text-center">
        <%= link_to "More info...", course_path(course), class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
    <hr class="col-8 offset-2">
    <br class="clr" />
  <% end %>
</div>